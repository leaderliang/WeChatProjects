<view class="container">
  <image class="head-image" src="/images/post/sls.jpg"></image>
 
  <view class="author-date">
    <image class="avatar" src="/images/avatar/2.png"></image>
    <text class="author">梁延桥</text>
    <text class="const-text">发表于</text>
    <text class="date">今天</text>
  </view>
  <text class="title">王者荣耀好玩么</text>
  <view class="tool">
    <view class="circle-img">
      <image wx:if="{{collected}}" catchtap="onColletionTap" src="/images/icon/collection.png"></image>
