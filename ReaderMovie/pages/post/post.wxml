<!--<import src="post-item/post-item-template.wxml"/>-->
<import src="/pages/post/post-item/post-item-template.wxml" />
<view>
  <swiper vertical="true" indicator-dots="true" autoplay="true" interval="2000" circular="true" indicator-color="#fffde7" indicator-active-color="#ffff00">
    <swiper-item>
      <image src="/images/wx.png"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/vr.png"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/iqiyi.png"></image>
    </swiper-item>
  </swiper>

  <block wx:for="{{posts_key}}" wx:for-item="item" wx:for-index="index" wx:key="">
    <view catchtap="onPostItemTap" data-postItemId="{{item.postId}}" 
    >
      <!-- is = 的是模板的名字-->
      <template is="postItem" data="{{...item}}" />
    </view>
  </block>

</view>