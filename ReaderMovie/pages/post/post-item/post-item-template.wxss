.post-container {
  flex-direction: column;
  display: flex;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  margin-left: 0rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}

.post-author-date {
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  margin-left: 10px;
}

.post-author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.post-date {
  margin-left: 20px;
  vertical-align: middle;
}

.post-image {
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}

.post-date {
  font-size: 26rpx;
  margin-bottom: 10px;
}

.post-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
  text-align: left;
}

.post-content {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
  text-align: left;
}

/*flex-direction:row 横向布局*/
.post-like {
  flex-direction: row;
  display:flex;
  font-size: 13px;
  line-height: 16px;
  margin-left: 10px;
}

/* ertical-align: middle; 垂直居中*/
.post-like-image {
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}

.post-like-font {
  vertical-align: middle;
  margin-right: 20px;
}
